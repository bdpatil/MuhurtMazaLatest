<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorbg"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/layout_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppBarOverlay">

                <include layout="@layout/toolbar" />

            </android.support.design.widget.AppBarLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/imgnotify_NotifySettings"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/notifyg" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txtNotifications_NotifySettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:ems="10"
                android:text="Notifications   "
                android:textColor="@color/black"
                android:textColorHint="#ffffff"
                android:textSize="15sp"
                android:textStyle="normal"
                android:typeface="normal" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <ToggleButton
                    android:id="@+id/toggleBtnNotifyOnOff_NotifySettings"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/checkbox_selector"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5">

                <View
                    android:layout_width="38dp"
                    android:layout_height="38dp"></View>
            </RelativeLayout>

            <TextView
                android:id="@+id/txthead_NotifySettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="2.5"
                android:background="@android:color/transparent"
                android:text="Select Notifications Type"
                android:textColor="@color/black"
                android:textColorHint="#ffffff"
                android:textSize="15sp"
                android:textStyle="normal"
                android:typeface="normal" />


        </LinearLayout>

        <!--new festivals-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5">

                <View
                    android:layout_width="38dp"
                    android:layout_height="38dp"></View>
            </RelativeLayout>

            <TextView
                android:id="@+id/txtFestivals_NotifySettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:ems="10"
                android:text="Festivals"
                android:textColor="@color/black"
                android:textColorHint="#ffffff"
                android:textSize="15sp"
                android:textStyle="normal"
                android:typeface="normal" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:button="@drawable/checkbox_selectornotifications" />
            </RelativeLayout>
        </LinearLayout>
        <!--auspious muhurt-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5">

                <View
                    android:layout_width="38dp"
                    android:layout_height="38dp"></View>
            </RelativeLayout>

            <TextView
                android:id="@+id/txtAuspicious_NotifySettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:ems="10"
                android:text="Auspicious Muhurt"
                android:textColor="@color/black"
                android:textColorHint="#ffffff"
                android:textSize="15sp"
                android:textStyle="normal"
                android:typeface="normal" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selectornotifications" />
            </RelativeLayout>
        </LinearLayout>
        <!--Special Events-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5">

                <View
                    android:layout_width="38dp"
                    android:layout_height="38dp"></View>
            </RelativeLayout>

            <TextView
                android:id="@+id/txtSpecialEvents_NotifySettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:ems="10"
                android:text="Special Event"
                android:textColor="@color/black"
                android:textColorHint="#ffffff"
                android:textSize="15sp"
                android:textStyle="normal"
                android:typeface="normal" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selectornotifications" />
            </RelativeLayout>
        </LinearLayout>
        <!--FullMoon-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="10">


            <View
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1.7"></View>


            <TextView
                android:id="@+id/txtFullMoon_NotifySettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="6.6"
                android:background="@android:color/transparent"
                android:ems="10"
                android:text="Full Moon"
                android:textColor="@color/black"
                android:textColorHint="#ffffff"
                android:textSize="15sp"
                android:textStyle="normal"
                android:typeface="normal" />


            <CheckBox
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1.7"
                android:button="@drawable/checkbox_selectornotifications" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnSave_NotifySetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:text="Save"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorWhite" />
</RelativeLayout>