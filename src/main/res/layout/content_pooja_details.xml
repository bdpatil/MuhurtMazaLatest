<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <android.support.v4.widget.NestedScrollView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:orientation="vertical">



                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="5dp">

                        <LinearLayout
                            style="@style/Widget.CardContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="0dp">
                            <!-- Pooja image section starts here-->
                            <ImageView
                                android:id="@+id/pooja_image"
                                android:layout_width="fill_parent"
                                android:layout_height="150dp"
                                android:layout_marginBottom="10dp"
                                android:adjustViewBounds="false"
                                android:elevation="5dp"
                                android:focusableInTouchMode="false"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_muma_logo_dark"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/pooja_description"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="@string/cheese_ipsum"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal"
                                android:weightSum="12">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3">

                                    <TextView
                                        android:id="@+id/pooja_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:autoText="false"
                                        android:text="Bhagwad Puran Anusthan"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="20sp" />

                                    <TextView
                                        android:id="@+id/duration_and_guruji"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/pooja_name"
                                        android:autoText="false"
                                        android:text="Duration - 3 hrs, Guruji - 1"
                                        android:textColor="@color/colorGrey"
                                        android:textSize="18sp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="9">

                                    <TextView
                                        android:id="@+id/pooja_price"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="false"
                                        android:autoText="false"
                                        android:text="\u20B9 6001"
                                        android:textAlignment="viewEnd"
                                        android:gravity="end"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="18sp"
                                        android:layout_alignParentBottom="false"
                                        android:layout_alignParentTop="false"
                                        android:layout_centerInParent="true" />
                                </RelativeLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <!-- Pooja image section ends here-->
                    <TextView
                        android:id="@+id/detailsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pooja Details"
                        android:textAllCaps="false"
                        android:textColor="@color/colorGrey"
                        android:textSize="12sp"/>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="5dp">

                        <LinearLayout
                            style="@style/Widget.CardContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="0dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@color/colorWhite">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:background="@color/colorWhite"
                                    android:orientation="horizontal"
                                    android:padding="10dp">

                                    <Button
                                        android:id="@+id/stepone"
                                        android:layout_width="30dp"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/round_button_active"
                                        android:gravity="center_vertical|center_horizontal"
                                        android:text="1"
                                        android:textColor="#fff" />

                                    <View
                                        android:id="@+id/step_one_indicator"
                                        android:layout_width="50dp"
                                        android:layout_height="5px"
                                        android:layout_gravity="center_vertical"
                                        android:layout_margin="0px"
                                        android:background="@color/colorGrey"
                                        android:padding="0px"/>

                                    <Button
                                        android:id="@+id/steptwo"
                                        android:layout_width="30dp"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/round_button_active"
                                        android:gravity="center_vertical|center_horizontal"
                                        android:text="2"
                                        android:textColor="#fff" />

                                    <View
                                        android:id="@+id/step_two_indicator"
                                        android:layout_width="50dp"
                                        android:layout_height="5px"
                                        android:layout_gravity="center_vertical"
                                        android:layout_margin="0dp"

                                        android:background="@color/colorGrey"
                                        android:padding="0dp"/>

                                    <Button
                                        android:id="@+id/stepthree"
                                        android:layout_width="30dp"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/round_button_active"
                                        android:gravity="center_vertical|center_horizontal"
                                        android:text="3"
                                        android:textColor="#fff" />


                                </LinearLayout>
                            </RelativeLayout>

                            <android.support.v4.view.ViewPager

                                android:id="@+id/viewPager"
                                android:layout_width="fill_parent"
                                android:layout_height="200dp"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </RelativeLayout>


    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>