<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbg">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="3">
                <ImageView
                    android:id="@+id/imageViewl"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/pooja_image" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7">


                <RelativeLayout
                    android:id="@+id/relativeLayoutViewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <TextView
                        android:id="@+id/txtAdTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:text="Bhoomi Pooja"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorRed" />

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_edit" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutViewOrdersRuppee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayoutViewTitle"

                    >

                    <ImageView
                        android:id="@+id/imageViewViewRupeeSymbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/indian_inr" />

                    <TextView
                        android:id="@+id/txtAdPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/imageViewViewRupeeSymbol"
                        android:text="2100"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorBlack" />

                    <ImageView
                        android:id="@+id/imageViewViewStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/txtAdPrice"
                        android:background="@drawable/indian_inr"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txtStatusLabel1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@+id/imageViewViewStatus"
                        android:background="@color/colorGreen"
                        android:padding="2dp"
                        android:text="  With Samagary  "
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:id="@+id/txtStatusLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Test"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorLightGray" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relativeLayoutViewDESC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayoutViewOrdersRuppee">


                    <TextView
                        android:id="@+id/txtAdDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="left"
                        android:text="The Bhagwat Puran Anusthan"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorBlack" />

                    <ImageView
                        android:id="@+id/imageViewViewDivider3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/underline" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayoutViewDESC"
                    android:layout_marginBottom="0dp">


                    <ImageView
                        android:id="@+id/imageViewViewOrderInvoiceSymbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/invoice" />

                    <TextView
                        android:id="@+id/txtAdType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/imageViewViewOrderInvoiceSymbol"
                        android:gravity="center"
                        android:text="General"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        android:id="@+id/textViewDevider2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/txtAdType"
                        android:gravity="center"
                        android:text="|"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorLightGray" />

                    <ImageView
                        android:id="@+id/imageViewViewOrderInvoiceSymbol1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/textViewDevider2"
                        android:background="@drawable/myprofile" />

                    <TextView
                        android:id="@+id/txtAdUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/imageViewViewOrderInvoiceSymbol1"
                        android:gravity="center"
                        android:text="Sandeep Mali"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorBlack" />


                    <ImageView
                        android:id="@+id/imageViewViewDivider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/underline" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relativeLayoutViewOrdersDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayoutView"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="0dp">

                    <ImageView
                        android:id="@+id/imageViewViewCalender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/calender" />

                    <TextView
                        android:id="@+id/txtDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_toRightOf="@+id/imageViewViewCalender"
                        android:text="3 Sept 2015"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/txtCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="2 likes, 10 views" />
                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
